<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Ex5Activity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/but1"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/red"
        android:text="1. Kích hoạt onPause()"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/but2"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/but2"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/blue"
        android:text="2. Kích hoạt onStop()"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/but3"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:backgroundTint="@color/yellow"
        android:text="3. Kích hoạt onDestroy()"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@id/but2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>