<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ex7ActivityRelativeLayout">

    <TextView
        android:id="@+id/tvNine"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/yellow"
        android:text="9"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tvOne"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:text="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/tvTwo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:text="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/tvThree"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:text="3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/tvFour"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:text="4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/tvFive"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:text="5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tvSix"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:text="6"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tvSeven"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:text="7"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tvEight"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:text="8"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tvTen"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:text="10"
        android:layout_toLeftOf="@id/tvNine"
        android:layout_above="@id/tvNine"
        />

    <TextView
        android:id="@+id/tvEleven"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:text="11"
        android:layout_toRightOf="@id/tvNine"
        android:layout_above="@id/tvNine"
        />

    <TextView
        android:id="@+id/tvTwelve"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:text="12"
        android:layout_toLeftOf="@id/tvNine"
        android:layout_below="@id/tvNine"
        />

    <TextView
        android:id="@+id/tvThirteen"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:text="13"
        android:layout_toRightOf="@id/tvNine"
        android:layout_below="@id/tvNine"
        />
</RelativeLayout>