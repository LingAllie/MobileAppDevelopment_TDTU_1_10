<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".Ex3Activity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Sqrt"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:gravity="center"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="SQRT"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sqrtSym"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="√"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Sqrt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mod"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="MOD"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/sqrtSym" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/div"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="DIV"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/mod" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/equal"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="="
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/div" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dot"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="."
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/Sqrt"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="+"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/sqrtSym"
        app:layout_constraintLeft_toRightOf="@id/dot" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sub"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="-"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/mod"
        app:layout_constraintLeft_toRightOf="@id/add" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mul"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="X"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/div"
        app:layout_constraintLeft_toRightOf="@id/sub" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/divide"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="÷"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/equal"
        app:layout_constraintLeft_toRightOf="@id/mul" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/five"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@id/dot"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/six"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@id/add"
        app:layout_constraintLeft_toRightOf="@id/five" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/seven"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@id/sub"
        app:layout_constraintLeft_toRightOf="@id/six" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/eight"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@id/mul"
        app:layout_constraintLeft_toRightOf="@id/seven" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nine"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@id/divide"
        app:layout_constraintLeft_toRightOf="@id/mul" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/zero"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@id/five"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/one"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@id/six"
        app:layout_constraintLeft_toRightOf="@id/zero" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/two"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:backgroundTint="#CAC9C9"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@id/seven"
        app:layout_constraintLeft_toRightOf="@id/one" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/three"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@id/eight"
        app:layout_constraintLeft_toRightOf="@id/two" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/four"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:backgroundTint="#CAC9C9"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@id/nine"
        app:layout_constraintLeft_toRightOf="@id/three" />

    <TextView
        android:id="@+id/viewOP"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintBottom_toTopOf="@id/two"
        android:text=""
        android:layout_marginBottom="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="right"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintBottom_toTopOf="@id/two"
        android:layout_marginBottom="2dp"
        android:background="@color/green"
        />

</androidx.constraintlayout.widget.ConstraintLayout>