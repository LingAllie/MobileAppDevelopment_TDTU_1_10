<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ex7_constraintLayout">

    <TextView
        android:id="@+id/tvNine"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/yellow"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOne"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:text="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTwo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:text="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tvThree"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tvFour"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tvFive"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:text="5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvOne"
        app:layout_constraintRight_toLeftOf="@id/tvTwo"
        />

    <TextView
        android:id="@+id/tvSix"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:text="6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTwo"
        app:layout_constraintBottom_toTopOf="@id/tvThree"
        />

    <TextView
        android:id="@+id/tvSeven"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvFour"
        app:layout_constraintRight_toLeftOf="@id/tvThree"
        />

    <TextView
        android:id="@+id/tvEight"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:text="8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvOne"
        app:layout_constraintBottom_toTopOf="@id/tvFour"
        />

    <TextView
        android:id="@+id/tvTen"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:text="10"
        app:layout_constraintRight_toLeftOf="@id/tvNine"
        app:layout_constraintBottom_toTopOf="@id/tvNine"
        />

    <TextView
        android:id="@+id/tvEleven"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:text="11"
        app:layout_constraintLeft_toRightOf="@id/tvNine"
        app:layout_constraintBottom_toTopOf="@id/tvNine"
        />

    <TextView
        android:id="@+id/tvTwelve"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:text="12"
        app:layout_constraintLeft_toRightOf="@id/tvNine"
        app:layout_constraintTop_toBottomOf="@id/tvNine"
        />

    <TextView
        android:id="@+id/tvThirteen"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:text="13"
        app:layout_constraintRight_toLeftOf="@id/tvNine"
        app:layout_constraintTop_toBottomOf="@id/tvNine"
        />
</androidx.constraintlayout.widget.ConstraintLayout>